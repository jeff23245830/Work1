@model ViewModel.ProductViewModel
@{
    // 從 ViewModel 中獲取分頁資訊
    var pageNumber = Model.PageNumber;
    var totalPages = Model.TotalPages;
    var pageSize = Model.PageSize; // 也可能需要 pageSize 來傳回給控制器
}
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-4">
            <h2 class="text-primary">
                產品清單
            </h2>
        </div>
        <div class="col-4">
            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
        </div>
        <div class="col-4 text-end">

            <a asp-controller="Product" asp-action="Edit" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 新增產品
            </a>
        </div>
    </div>
    <form asp-controller="Product" asp-action="Index" method="get">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        產品名稱
                    </th>
                    <th>
                        類別名稱
                    </th>
                     
                    <th>
                        操作
                    </th>
                </tr>
            </thead>
            <tbody> 

                @foreach (var obj in Model.ProductList)
                {
                    <tr>

                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Category.Name
                        </td>
                        <td>
                            <a type="submit" class="btn btn-primary" asp-controller="Product" asp-action="Edit" asp-route-Id="@obj.Id"><i class="bi bi-pencil"></i> 修改</a>
                            <button type="button" class="btn btn-danger"><i class="bi bi-trash"></i> 刪除</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </form>
</div>


<nav aria-label="Page navigation example">
    <ul class="pagination">
        @* 添加 justify-content-center 以讓分頁居中 *@ 
        <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
            @* 當前頁是第一頁時禁用 Previous 按鈕 *@
            <a class="page-link"
               asp-controller="Category"
               asp-action="Index"
               asp-route-pageNumber="@(pageNumber - 1)"
               asp-route-pageSize="@pageSize" @* 確保傳遞 pageSize，如果需要保持每頁項目數不變 *@
               aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == pageNumber ? "active" : "")">
                @* 如果是當前頁，則添加 active class *@
                <a class="page-link"
                   asp-controller="Category"
                   asp-action="Index"
                   asp-route-pageNumber="@i"
                   asp-route-pageSize="@pageSize">
                    @* 確保傳遞 pageSize *@
                    @i
                </a>
            </li>
        }

        <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
            @* 當前頁是最後一頁時禁用 Next 按鈕 *@
            <a class="page-link"
               asp-controller="Category"
               asp-action="Index"
               asp-route-pageNumber="@(pageNumber + 1)"
               asp-route-pageSize="@pageSize" @* 確保傳遞 pageSize *@
               aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
    </ul>
</nav>
<div class="text-center mt-3">
    @* 添加 mt-3 給一些上邊距 *@
    顯示 @((pageNumber - 1) * pageSize + 1) - @(Math.Min(pageNumber * pageSize, Model.TotalItems)) 共 @Model.TotalItems 條記錄
</div>