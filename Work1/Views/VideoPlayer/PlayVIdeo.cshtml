@{
    Layout = "_VideoCss";
}


<div>

    <div>
        <video id="video1">
            <source src="~/Video/Video/Valorant_37.mp4" type="video/mp4">
            你的瀏覽器不支援此影片的格式!
        </video>
    </div>

    <div id="cont">
        <div id="mouse-tracker"></div>
        <div onmouseenter="handleMouseEnter()" onmouseleave="handleMouseMove()">
            <progress id="load-progress" value="0" max="100"></progress>
            <progress id="progress-bar" value="0" max="100"></progress>
        </div>
        <div id="Low_btn" onmouseenter="handleMouseEnter()" onmouseleave="handleMouseMove()">

            <button id="play-btn">
                <img id="play-img" src="~/Video/img/play.png" alt="播放" style="width: 20px; height: 20px;">
            </button>
            <button id="ris10-btn">
                <img src="~/Video/img/replay10.png" alt="倒退10秒" style="width: 20px; height: 20px;">
            </button>
            <button id="add10-btn">
                <img src="~/Video/img/forward10.png" alt="快轉10秒" style="width: 20px; height: 20px;">
            </button> 
            <button id="Sound-btn">

                <img id="sound" src="~/Video/img/sound.png" alt="音量" style="width: 20px; height: 20px;">
                <button id="Sound-sliderBACK">
                    <input type="range" id="volumeControl" min="0" max="1" step="0.01" value="1" class="slider"/>
                </button>
            </button>
            <button id="full-btn">
                <img id="fullscreen-img" src="~/Video/img/full-screen.png" alt="全螢幕" style="width: 20px; height: 20px;">
            </button>
            <button id="speed-btn">
                <button id="speed0_1x" class="speed-button">0.1倍</button>
                <button id="speed0_25x" class="speed-button">0.25倍</button>
                <button id="speedNormal" class="speed-button">原速</button>
                <button id="speed1_5x" class="speed-button">1.5倍</button>
                <button id="speed2x" class="speed-button">2倍</button>
            </button>



        </div>
        <div id="Back_btn">
            <a asp-controller="VideoPlayer" asp-action="Index">
                    <h3> ←上一頁</h3>
            </a>
        </div>
    </div>


</div>
<script type="text/javascript">
    var pauseButtonUrl = '@Url.Content("~/Video/img/pause-button.png")';
    var playButtonUrl = '@Url.Content("~/Video/img/play.png")';


    var normalScreenUrl = '@Url.Content("~/Video/img/normal-screen.png")';
    var fullScreenUrl = '@Url.Content("~/Video/img/full-screen.png")';

    var soundOnUrl = '@Url.Content("~/Video/img/sound.png")';
    var soundOffUrl = '@Url.Content("~/Video/img/nosound.png")';
</script>
<script src="~/Video/Js/play.js"></script>
 